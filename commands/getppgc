// commands/getppgc.js
export default {
  name: "getppgc",
  description: "Get the group‚Äôs profile picture (Admin only)",
  async execute(sock, msg) {
    const groupId = msg.key.remoteJid;

    // ‚úÖ Check if command used in a group
    if (!groupId.endsWith("@g.us")) {
      await sock.sendMessage(groupId, { text: "‚ö†Ô∏è This command only works in *groups*." }, { quoted: msg });
      return;
    }

    try {
      const ppUrl = await sock.profilePictureUrl(groupId, "image");
      await sock.sendMessage(groupId, { image: { url: ppUrl }, caption: "üñºÔ∏è *Group Profile Picture*" }, { quoted: msg });
    } catch {
      await sock.sendMessage(groupId, { text: "‚ùå No profile picture found for this group." }, { quoted: msg });
    }
  },
};
